<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CAF0F8"
    android:orientation="vertical"
    tools:context=".SideNavPage.SettingActivity">

     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">


             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">


                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent">

                     <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent">

                         <ImageView
                             android:id="@+id/backchatvoice"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:src="@drawable/path1"
                             android:layout_gravity="center"
                             android:layout_marginLeft="20dp"/>


                     </LinearLayout>

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="20dp"
                         android:layout_marginBottom="20dp"
                         android:orientation="vertical">


                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="5dp"
                             android:text="Settings"
                             android:textSize="17sp"
                             android:textStyle="bold"
                             android:textColor="@color/black"/>

                     </LinearLayout>

                 </LinearLayout>
             </LinearLayout>

             <androidx.cardview.widget.CardView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="20dp"
                 android:layout_marginTop="10dp"
                 android:layout_marginRight="20dp"
                 android:layout_marginBottom="10dp"
                 app:cardBackgroundColor="#EBFFFFFF"
                 app:cardCornerRadius="20dp">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:background="#EBFFFFFF"
                     android:orientation="vertical">

                     <TextView
                         android:id="@+id/Notifications"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Notifications"
                         android:textSize="20dp"
                         android:drawableLeft="@drawable/bell_light"
                         android:drawablePadding="10dp"
                         android:layout_marginLeft="20dp"
                         android:layout_marginTop="30dp"
                         android:drawableRight="@drawable/arow"
                         android:layout_marginRight="20dp"
                         />


                     <TextView
                         android:id="@+id/Function"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Functions"
                         android:textSize="20dp"
                         android:drawableLeft="@drawable/darhboard_alt"
                         android:drawablePadding="10dp"
                         android:layout_marginLeft="20dp"
                         android:layout_marginTop="30dp"
                         android:drawableRight="@drawable/arow"
                         android:layout_marginRight="20dp"
                         />

                     <TextView
                         android:id="@+id/Storage_Data"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Storage &amp; Data"
                         android:textSize="20dp"
                         android:drawableLeft="@drawable/cloud_alt_light"
                         android:drawablePadding="10dp"
                         android:layout_marginLeft="20dp"
                         android:layout_marginTop="30dp"
                         android:drawableRight="@drawable/arow"
                         android:layout_marginRight="20dp"
                         />

                     <TextView
                         android:id="@+id/Language"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Language"
                         android:textSize="20dp"
                         android:drawableLeft="@drawable/full_light"
                         android:drawablePadding="10dp"
                         android:layout_marginLeft="20dp"
                         android:layout_marginTop="30dp"
                         android:layout_marginBottom="30dp"
                         android:drawableRight="@drawable/arow"
                         android:layout_marginRight="20dp"
                         />

                 </LinearLayout>

             </androidx.cardview.widget.CardView>

             <androidx.cardview.widget.CardView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="20dp"
                 android:layout_marginTop="10dp"
                 android:layout_marginRight="20dp"
                 android:layout_marginBottom="10dp"
                 app:cardBackgroundColor="#EBFFFFFF"
                 app:cardCornerRadius="20dp">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:background="#EBFFFFFF"
                     android:orientation="vertical">

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Account &amp; Security"
                         android:textSize="20dp"
                         android:drawableLeft="@drawable/chield_check_light"
                         android:drawablePadding="10dp"
                         android:layout_marginLeft="20dp"
                         android:layout_marginTop="30dp"
                         android:drawableRight="@drawable/arow"
                         android:layout_marginRight="20dp"
                         />


                     <TextView
                         android:id="@+id/Manage_Device"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Manage Device"
                         android:textSize="20dp"
                         android:drawableLeft="@drawable/phone_light_p"
                         android:drawablePadding="10dp"
                         android:layout_marginLeft="20dp"
                         android:layout_marginTop="30dp"
                         android:drawableRight="@drawable/arow"
                         android:layout_marginRight="20dp"
                         android:layout_marginBottom="30dp"
                         />


                 </LinearLayout>

             </androidx.cardview.widget.CardView>

             <androidx.cardview.widget.CardView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="20dp"
                 android:layout_marginTop="10dp"
                 android:layout_marginRight="20dp"
                 android:layout_marginBottom="10dp"
                 app:cardBackgroundColor="#EBFFFFFF"
                 app:cardCornerRadius="12dp">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:background="#EBFFFFFF"
                     android:orientation="vertical">

                     <TextView
                         android:id="@+id/Account_Security"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Account &amp; Security"
                         android:textSize="20dp"
                         android:drawableLeft="@drawable/chield_check_light"
                         android:drawablePadding="10dp"
                         android:layout_marginLeft="20dp"
                         android:layout_marginTop="15dp"
                         android:drawableRight="@drawable/arow"
                         android:layout_marginRight="20dp"
                         android:layout_marginBottom="15dp"
                         />


                 </LinearLayout>

             </androidx.cardview.widget.CardView>


         </LinearLayout>
     </ScrollView>
</LinearLayout>